{
  "name": "discord-bot",
  "version": "1.0.0",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "package:assets": "node scripts/copy-assets.js",
    "package": "npm run build && pkg . && npm run package:assets"
  },
  "keywords": [],
  "repository": "https://github.com/stigma861212/discord-bot",
  "author": {
    "name": "stigma861212",
    "url": "https://github.com/stigma861212"
  },
  "description": "",
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "axios": "^1.7.9",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.0.8",
    "sharp": "^0.33.5",
    "yt-dlp-wrap": "^2.3.12"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "@types/sharp": "^0.32.0",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "pkg",
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/**/*",
      "node_modules/ffmpeg-static/**"
    ]
  }
}
